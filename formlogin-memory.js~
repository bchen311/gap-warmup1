var userCounter = 1;

UserLogin = function(){};
UserLogin.prototype.dummyData = [];

UserLogin.prototype.findAll = function(callback) {
  callback( null, this.dummyData )
};

UserLogin.prototype.findById = function(id, callback) {
  var result = null;
  for(var i =0;i<this.dummyData.length;i++) {
    if( this.dummyData[i]._id == id ) {
      result = this.dummyData[i];
      break;
    }
  }
  callback(null, result);
};

UserLogin.prototype.save = function(users, callback) {
  var user = null;

  if( typeof(users.length)=="undefined")
    users = [users];

  for( var i =0;i< users.length;i++ ) {
    user = users[i];
    user._id = userCounter++;

    this.dummyData[this.dummyData.length]= user;
  }
  callback(null, articles);
};

exports.UserLogin = UserLogin;
